@page "{context}/{name}"
@model Notino.Charts.Web.Pages.Releases.UpgradeModel
@{
    ViewData["Title"] = "Upgrade Release";
}

<h2>Upgrade @Model.Release.Name</h2>

<form method="post">
    <div class="row">
        <div class="col-md-4">
            <label for="ReleaseName">Release Name</label>
            <input type="text" readonly class="form-control" id="ReleaseName" value="@Model.Release.Name" />
        </div>
        <div class="col-md-4">
            <label asp-for="Version">Version</label>
            <select class="custom-select" asp-for="Version" asp-items="@Model.Chart.Releases.Select(c => new SelectListItem { Value = c.Version.ToString(), Text = c.Version.ToString() })">
                <option value="">Choose...</option>
            </select>
        </div>
        <div class="col-md-4">
            <label for="KubernetesContext">Kubernetes Context</label>
            <input type="text" readonly class="form-control" id="KubernetesContext" value="@Model.Release.Cluster" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label asp-for="Values">Values</label>
            <textarea class="form-control" asp-for="Values" rows="15"></textarea>
        </div>
    </div>
    <hr />
    <button class="btn btn-primary" type="submit">Upgrade</button>
    <a class="btn btn-secondary" asp-page="/Releases/Index">Cancel</a>
</form>